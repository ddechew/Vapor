@model VaporWebAPI.DTOs.ResetPasswordEmailModel
@using System;

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1b1f23;
            color: #ffffff;
            padding: 40px;
        }

        .email-container {
            max-width: 640px;
            margin: auto;
            background-color: #2a2f36;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.7);
        }

        h2 {
            color: #66ccff;
            font-size: 26px;
            margin-bottom: 24px;
        }

        p {
            color: #f2f2f2;
            font-size: 17px;
            line-height: 1.8;
            margin: 16px 0;
        }

        a.button {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 20px;
            background-color: #66ccff;
            color: #1b1f23;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
        }

        .footer {
            font-size: 14px;
            color: #bbbbbb;
            margin-top: 48px;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <h2>Reset Your Password 🔐</h2>

        <p>Hi @Model.Username,</p>

        <p>We received a request to reset your password. If you made this request, please click the button below to choose a new password.</p>

        <a class="button" href="@Model.ResetLink">Reset Password</a>

        <p>If you didn’t request this, you can safely ignore this email — your password will remain unchanged.</p>

        <p class="footer">
            &copy; @DateTime.UtcNow.Year Vapor Inc. All rights reserved.
        </p>
    </div>
</body>
</html>
