@model VaporWebAPI.DTOs.EmailVerificationModel
@using System;

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1b1f23;
            color: #ffffff;
            padding: 40px;
        }

        .email-container {
            max-width: 640px;
            margin: auto;
            background-color: #2a2f36;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.7);
        }

        h2 {
            color: #66b2ff;
            font-size: 26px;
            margin-bottom: 24px;
        }

        p {
            color: #f2f2f2;
            font-size: 17px;
            line-height: 1.8;
            margin: 16px 0;
        }

        .btn {
            background-color: #66b2ff;
            color: white !important;
            padding: 14px 28px;
            text-decoration: none;
            border-radius: 8px;
            display: inline-block;
            font-size: 16px;
            font-weight: bold;
            margin-top: 12px;
        }

        .footer {
            font-size: 14px;
            color: #bbbbbb;
            margin-top: 48px;
        }

        a {
            color: #66b2ff;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <h2>Welcome to Vapor 🎮</h2>
        <p>Hi @Model.Username,</p>

        <p>Thank you for joining Vapor! Please verify your email address by clicking the button below:</p>

        <p>
            <a href="@Model.VerificationUrl" class="btn">Verify Email</a>
        </p>

        <p>If you didn’t create this account, you can delete it here:</p>
        <p>
            <a href="@Model.DeleteUrl" class="btn">Delete Account</a>
        </p>

        <p class="footer">
            You received this email because someone signed up on Vapor with this address.
            If that wasn’t you, feel free to delete the account or ignore this email.<br /><br />
            &copy; @DateTime.UtcNow.Year Vapor Inc. All rights reserved.
        </p>
    </div>
</body>
</html>
